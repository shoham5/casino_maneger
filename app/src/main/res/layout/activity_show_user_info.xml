<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.shoham.loginscreen.showUserInfo">

    <ImageView
        android:id="@+id/imgVpic"
        android:layout_width="345dp"
        android:layout_height="154dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvPhone"
        app:srcCompat="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/tvLLast"
        android:layout_width="368dp"
        android:layout_height="70dp"
        android:paddingTop="26dp"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/tvEEmail"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvFIRST" />

    <TextView
        android:id="@+id/tvPhone"
        android:layout_width="368dp"
        android:layout_height="70dp"
        android:paddingTop="26dp"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/imageView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvAAdress"
        tools:ignore="UnknownId" />

    <TextView
        android:id="@+id/tvEEmail"
        android:layout_width="368dp"
        android:layout_height="69dp"
        android:paddingTop="26dp"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/tvAAdress"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvLLast" />

    <TextView
        android:id="@+id/tvFIRST"
        android:layout_width="368dp"
        android:layout_height="70dp"
        android:paddingTop="26dp"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/tvLLast"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvAAdress"
        android:layout_width="368dp"
        android:layout_height="70dp"
        android:paddingTop="26dp"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/tvPhone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvEEmail" />

</android.support.constraint.ConstraintLayout>
